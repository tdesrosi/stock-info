<!-- TradingView Widget LOOP FOR TRACKED STOCKS-->
<% var h = screenHeight %>
<% var strlength = trackedPositions.length; %>
<% var barHeight = h/strlength; %>


<% for(var i = 0; i < trackedPositions.length; i++){ %>

<% var split_string = trackedPositions[i].split(':'); %>
<% var div_id = split_string[2]; %>

<!-- TradingView Widget BEGIN -->
<div class="tradingview-widget-container">
    <div id="tradingview_<%= div_id %>"></div>
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <script type="text/javascript">
        new TradingView.widget(
            {
                "width": "auto",
                "height": "<%= barHeight %>",
                "symbol": "<%= split_string[0] %>:<%= split_string[1] %>",
                "interval": "15",
                "timezone": "Etc/UTC",
                "theme": "dark",
                "style": "1",
                "locale": "en",
                "toolbar_bg": "#f1f3f6",
                "enable_publishing": false,
                "hide_top_toolbar": true,
                "save_image": false,
                "container_id": "tradingview_<%= div_id %>"
            }
        );
    </script>
</div>
<% } %>

